<% include partials/header_form_page %>

<div class="container">
    <div class="row flex-row align-items-center justify-content-center">
        <div class="col-4 align-items-center justify-content-center">
            <div class="container">
                <div class="card">
                    <div class="card-title">Sign Up</div>
                    <div class="card-text">
                        <form action="/signup" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" name="username" placeholder="Username" aria-describedby="emailHelp">
                                <small id="emailHelp" class="form-text text-muted">We will never share your personal details</small>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="password" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <input type="checkbox" id="termsCheck" name="termsAccepted" class="form-check-input" required>
                                <small><label class="form-check-label" for="termsCheck"><span class="text-muted">I accept the <a href="#">terms and conditions</a></label></small>
                            </div>
                            <button class="btn btn-secondary btn-block" type="submit">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <a href="/">Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>