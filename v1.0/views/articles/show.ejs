                            <div class="app-row-number text-center">
                                I
                            </div>
                        </div>
                        <!-- inner row for paragraph cards -->
                        <div class="col-10 p-0">
                            <div class="row m-0">
                                <!-- card-components inserted here -->
                                <!-- card-add-button col -->
                                <div class="col-4 col-add-button" data-col-index=1>
                                    <div class="card add-button">
                                        <div class="card-body d-flex align-items-center justify-content-center">
                                            <a href="#" class="card-add-button row-activator"><i class="fas fa-plus-circle"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
